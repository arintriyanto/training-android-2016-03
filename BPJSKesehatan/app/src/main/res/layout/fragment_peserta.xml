<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brainmatics.bpjs.bpjskesehatan.fragment.PesertaFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtNama"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Nama Peserta"
        android:textAlignment="center" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Alamat Email"
        android:textAlignment="center" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/txtLatitude"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Latitude"
        android:textAlignment="center" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/txtLongitude"
        android:hint="Longitude"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLatitude" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="57dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtAlamat"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="Alamat"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLongitude" />

    <ImageView
        android:layout_width="328dp"
        android:layout_height="136dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:id="@+id/imgFoto"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtAlamat"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="true" />

    <Button
        android:text="Simpan"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSimpan"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</android.support.constraint.ConstraintLayout>
